<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="me.davisallen.avdpractice.MainActivity">

    <ImageView
        android:id="@+id/ic_circle_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ic_check_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doYourDance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ic_dot_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ic_check_imageview"
        app:layout_constraintEnd_toEndOf="@+id/ic_check_imageview"
        app:layout_constraintStart_toStartOf="@+id/ic_check_imageview"
        app:layout_constraintTop_toTopOf="@+id/ic_check_imageview"
        app:srcCompat="@drawable/ic_dot"
        android:contentDescription="TODO" />


</android.support.constraint.ConstraintLayout>
